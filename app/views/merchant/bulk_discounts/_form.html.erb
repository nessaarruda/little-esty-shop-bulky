<%= form_with url: path, model: @discount, method: method, class: "bulk_discount_form", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, id: "name" %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, id: "percentage" %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity, id: "quantity" %>
<%= submit_tag button_text %>
<% end %>
